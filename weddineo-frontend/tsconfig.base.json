{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@weddineo-frontend/version": ["libs/version/src/index.ts"],
      "@weddineo-frontend/rest-api": ["libs/rest-api/src/index.ts"],
      "@weddineo-frontend/auth": ["libs/auth/src/index.ts"],
      "@weddineo-frontend/auth/data": ["libs/auth/data/src/index.ts"],
      "@weddineo-frontend/shared/ui-kit": ["libs/shared/ui-kit/src/index.ts"],
      "@weddineo-frontend/shared/header": ["libs/shared/header/src/index.ts"],
      "@weddineo-frontend/shared/footer": ["libs/shared/footer/src/index.ts"],
      "@weddineo-frontend/home": ["libs/home/src/index.ts"],
      "@weddineo-frontend/main": ["libs/main/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
